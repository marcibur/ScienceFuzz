@page
@model RTFModel
@{
    ViewData["Title"] = "RTF";
}

<div class="container" style="margin-top:20px">
    @if (Model.Publications.Count == 0)
    {
        <section>
            <form class="text-center" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="Input.AuthorSurname">Nazwisko autora</label>
                    <input asp-for="Input.AuthorSurname" />
                </div>
                <div class="form-group">
                    <label asp-for="Input.FormalTypes">Typy formalne publikacji (oddzielone przecinkiem)</label>
                    <input asp-for="Input.FormalTypes" />
                </div>
                <div class="form-group">
                    <label asp-for="Input.Rtv">.rtf file</label><br />
                    <input asp-for="Input.Rtv" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-success">Submit</button>
                </div>
            </form>
        </section>
    }
    else
    {
        <section>
            @foreach (var publication in Model.Publications)
            {
                <ul>
                    <li>Autor: @publication.Author</li>
                    <li>Tytuł: @publication.Title</li>
                    <li>Czasopismo: @publication.JournalShort</li>
                    <li>Czasopismo pełne: @publication.JournalFull</li>
                    <li>Kod: @publication.FormalType</li>
                </ul>
            }
        </section>
    }
</div>
