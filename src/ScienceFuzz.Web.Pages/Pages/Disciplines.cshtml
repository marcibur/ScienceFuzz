@page
@model ScienceFuzz.Web.Pages.Pages.DisciplinesModel
@{
    ViewData["Title"] = "Dyscypliny";
}

@section CSS
{
    <link href="assets/css/tables.css" rel="stylesheet" />
}

<div class="container" style="        margin-top: 50px">
    <section class="text-center">
        <a href="~/init/disciplines.csv">Pobierz źródło danych&nbsp;<i class="fas fa-file-csv"></i></a>
    </section>
    <hr />
    <section>
        <form class="search-form" method="get">
            <div class="input-group">
                <div class="input-group-prepend"><span class="text-primary input-group-text"><i class="fa fa-search"></i></span></div>
                <input class="form-control" asp-for="Search" placeholder="Szukaj...">
                <div class="input-group-append"><button class="btn btn-primary" type="submit">Szukaj</button></div>
            </div>
        </form>
    </section>
    <hr />
    @if (Model.Disciplines.Count == 0)
    {
        <section>
            <div class="alert alert-info text-center" role="alert"><span><strong>Nie znaleziono żadnych wyników</strong><br></span></div>
        </section>
    }
    else
    {
        <section>
            <div class="shadow-lg table-div">
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-sm">
                        <thead>
                            <tr>
                                <th>Nr</th>
                                <th>Dyscyplina</th>
                                <th>Dziedziny_A</th>
                                <th>Dziedziny_B</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Disciplines.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@Model.Disciplines[i].Title</td>
                                    <td>@Model.Disciplines[i].DomainsA</td>
                                    <td>@Model.Disciplines[i].DomainsB</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    }
</div>