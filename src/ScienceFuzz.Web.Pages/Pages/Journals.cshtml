@page
@model ScienceFuzz.Web.Pages.Pages.JournalsModel
@{
    ViewData["Title"] = "Czasopisma";
}

@section CSS
{
    <link href="assets/css/tables.css" rel="stylesheet" />
}

<div class="container" style="        margin-top: 50px">
    <section>
        <form class="search-form" method="get">
            <div class="input-group">
                <div class="input-group-prepend"><span class="text-primary input-group-text"><i class="fa fa-search"></i></span></div>
                <input asp-for="Search" class="form-control" placeholder="Szukaj...">
                <div class="input-group-append"><button class="btn btn-primary" type="submit">Szukaj</button></div>
            </div>
        </form>
    </section>
    <hr />
    @if (Model.Journals.Count == 0)
    {
        <section>
            <div class="alert alert-info text-center" role="alert"><span><strong>Nie znaleziono żadnych wyników</strong><br></span></div>
        </section>
    }
    else
    {
        <section>
            <div class="shadow-lg table-div">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Nr</th>
                                <th>Czasopismo</th>
                                <th>Dyscyplina_A</th>
                                <th>Dyscyplina_B</th>
                                <th>Dyscypliny_C</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Journals.Count; i++)
                            {
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>@Model.Journals[i].Title</td>
                                    <td>@Model.Journals[i].Discipline1</td>
                                    <td>@Model.Journals[i].Discipline2</td>
                                    <td>@Model.Journals[i].MoreDisciplinesString</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    }
</div>